        //        $("#myModalpartial").modal("show");
             
        //    }
        //})
    }

    var AddEditEmployee = function (employeeId) {
        var url = "/Test/AddEditEmployee?EmployeeID=" + employeeId;
        $("#myModalbodyAddEdit").load(url, function () {
            $("#myModalpartialAddEdit").modal("show");
        })
    }


</script>


